name: C/C++ CI

on:
  # schedule:
  #   - cron: "0 2 * * 1-6"
  pull_request:
  push:
    branches:
    - master
    - /*
     
jobs:
  build:
    name: basic build
    runs-on: ubuntu-latest
    
    strategy:
      matrix:
        os: [ubuntu-latest,windows-latest]
    
    steps:
     - uses: actions/checkout@v1
     - name: make
       run: make
     - name: make test
       run: make test
     - name: run test
       run: ./build/computingProblemsTests
     - name: make clean
       run: make clean